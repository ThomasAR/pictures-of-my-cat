{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "standard-with-typescript"
    ],
    "ignorePatterns": [
        "node_modules",
        "build",
        "dist",
        "public"
    ],
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": "./web/tsconfig.json"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "@typescript-eslint/semi": 0,
        "@typescript-eslint/no-unused-vars": 0,
        "@typescript-eslint/explicit-function-return-type": 1,
        "semi": [
            2,
            "always"
        ]
    }
}